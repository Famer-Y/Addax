<assembly xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-component-1.1.2.xsd">
    <id>release</id>
    <formats>
        <format>dir</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>common/target/addax/</directory>
            <includes>
                <include>*.jar</include>
            </includes>
            <fileMode>0644</fileMode>
            <outputDirectory>addax-${project.version}/lib</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>core/target/addax/</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <outputDirectory>addax-${project.version}</outputDirectory>
        </fileSet>

        <!-- reader -->
        <fileSet>
            <directory>plugin/reader/streamreader/target/streamreader-${project.version}/</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <fileMode>0644</fileMode>
            <outputDirectory>addax-${project.version}</outputDirectory>
        </fileSet>

        <!-- writer -->
        <fileSet>
            <directory>plugin/writer/streamwriter/target/streamwriter-${project.version}/</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
            <fileMode>0644</fileMode>
            <outputDirectory>addax-${project.version}</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>
